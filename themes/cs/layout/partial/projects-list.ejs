<section class="py-0" id="service">
  <div class="container">
    <div class="row">
      <div class="col-lg-7 col-xxl-5 mx-auto text-center py-7">
        <h5 class="fw-bold fs-3 fs-lg-5 lh-sm mb-3">Последние проекты</h5>
        <p class="mb-0">
          Здесь представлены только последние добавленные проекты. Все проекты Вы можете посмотреть
          на странице "Проекты".
          <!-- <span class="fw-bold">ThemeWagon</span> -->
        </p>
      </div>
    </div>
    <div
      class="bg-holder"
      style="
        background-image: url(assets/img/illustrations/service.png);
        background-position: bottom center;
        background-size: contain;
      "
    ></div>

    <div class="row flex-center circle-blend circle-blend-right circle-warning">
      <div class="col-xl-9">
        <div class="row justify-content-center circle">
          <% let count = 1 %> <% site.posts.data.forEach( (post) => { %> <% if (count < 4) { %>
          <div class="col-md-4 mb-4">
            <div class="card card-bg h-100 px-4 px-md-2 px-lg-3 px-xxl-4 pt-4">
              <div class="text-center">
                <% if (post.small_logo) { %>
                <img
                  class="me-3 me-md-3"
                  src="/img/projects/<%= post.logo_path %>/<%= post.small_logo %>"
                  alt="<%= post.title %>"
                  style="padding-bottom: 10px"
                />
                <% } %>
                <div class="card-body text-center text-md-start">
                  <h6 class="fw-bold fs-1"><%= post.name %></h6>
                  <p class="mt-3 mb-md-0 mb-lg-3"><%= post.description %></p>
                  <a
                    class="btn btn-lg ps-0 pe-3 text-primary"
                    href="<%= post.permalink %>"
                    style="text-decoration: none"
                    role="button"
                  >
                    Узнать больше
                    <svg
                      class="bi bi-arrow-right-short"
                      xmlns="http://www.w3.org/2000/svg"
                      width="25"
                      height="25"
                      fill="currentColor"
                      viewBox="0 0 16 16"
                    >
                      <path
                        fill-rule="evenodd"
                        d="M4 8a.5.5 0 0 1 .5-.5h5.793L8.146 5.354a.5.5 0 1 1 .708-.708l3 3a.5.5 0 0 1 0 .708l-3 3a.5.5 0 0 1-.708-.708L10.293 8.5H4.5A.5.5 0 0 1 4 8z"
                      ></path></svg
                  ></a>
                </div>
              </div>
            </div>
          </div>
          <% } %> <% count++ %> <% }) %>
        </div>
      </div>
    </div>
  </div>
</section>
